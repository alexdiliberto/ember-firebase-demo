{{#if session.isAuthenticated}}
  Logged in as {{session.currentUser.displayName}} <button {{action "signOut"}}>Sign out</button>
  <hr>

  <label>Title</label>
  {{input value=title}}
  <button {{action "createArticle"}}>Create an Article</button>

  <p>Articles:</p>
  <ul>
    {{#each model as |article|}}
      <li>{{article.title}}</li>
    {{/each}}
  </ul>

  {{outlet}}
{{else}}
  <button {{action "signIn" "google"}}>Sign in with Google</button>
{{/if}}